  include <abstractions/base>
  include <abstractions/nameservice>

  capability setgid,
  capability setuid,

  @{exec_path} r,
  /usr/lib/man-db/man Px,

  # Site-specific additions and overrides. See local/README for details.
  include if exists <local/usr.bin.man>
}
