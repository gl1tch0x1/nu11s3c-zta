abi <abi/4.0>,

include <tunables/global>

/usr/sbin/in.fingerd {
  include <abstractions/base>
  include <abstractions/nameservice>

  @{HOME}/.plan          r,
  @{HOME}/.project       r,

  @{exec_path} mr,

  /usr/bin/finger        mix,
  /var/log/lastlog       r,
  /{,var/}run/utmp       rk,

  # Site-specific additions and overrides. See local/README for details.
  include if exists <local/usr.sbin.in.fingerd>
}
